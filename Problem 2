#include <iostream>
using namespace std;

int main()
{
	int tempA[7], tempB[7], tempC[7], a, b, c;
	
	cout << "This program will store and display the temperature of Province A, Province B, and Province C for a week.";
	cout << "\n\nEnter all temperature for a week of Province A," << endl << "Province B, and then Province C." << endl << endl;
	
	
	for (a = 1; a <= 7; a++)	
	{
	cout << "Province A, Day" << a << ": ";
		cin >> tempA[a];}
		
	for (b = 1; b <=7; b++)
	{
		cout << "Province B, Day" << b << ": ";
		cin >> tempB[b];
	}
	
	for (c = 1; c <= 7; c++)
	{
		cout << "Province C, Day" << c << ": ";
		cin >> tempC[c];
	}
	
	cout << "\n\nDisplaying Values: " << endl;
	for (a = 1; a <= 7; a++)
	{
		cout << "Province A, Day" << a << ": " << tempA[a] << "\n";
	}
	for (b = 1; b <= 7; b++)
	{
		cout << "Province B, Day" << b << ": " << tempB[b] << "\n";
	}
	for (c = 1; c <=7; c++)
	{
		cout << "Province C, Day" << c << ": " << tempC[c] << "\n";
	}
	
		
	
	return 0;
}
